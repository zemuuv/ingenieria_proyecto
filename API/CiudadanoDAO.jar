import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;
import java.util.List;

public class CiudadanoDAO {

    private SessionFactory sessionFactory = new Configuration().configure().buildSessionFactory();

    public void guardar(Ciudadano ciudadano) {
        Session session = sessionFactory.openSession();
        Transaction transaction = session.beginTransaction();
        session.save(ciudadano);
        transaction.commit();
        session.close();
    }

    public List<Ciudadano> listar() {
        Session session = sessionFactory.openSession();
        List<Ciudadano> ciudadanos = session.createQuery("from Ciudadano", Ciudadano.class).list();
        session.close();
        return ciudadanos;
    }

    // MÃ©todos para actualizar, eliminar, buscar ciudadanos...
}
